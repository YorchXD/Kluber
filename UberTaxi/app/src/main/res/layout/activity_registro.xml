<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    tools:context="com.example.ovidio.ubertaxi.Registro">

    <LinearLayout
        android:id="@+id/layoutTitulo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tv_tituloRegistro"
            android:textColor="@color/colorTextIcon"
            android:textSize="25sp"
            android:textStyle="bold"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutTitulo"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp">

        <EditText
            android:id="@+id/editT_Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et_nombre"
            android:inputType="text"
            android:textColorLink="@color/colorPrimaryText" />

        <EditText
            android:id="@+id/editT_ApPaterno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et_apPaterno"
            android:inputType="text"
            android:textColorLink="@color/colorPrimaryText" />

        <EditText
            android:id="@+id/editT_ApMaterno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et_apMaterno"
            android:inputType="text"
            android:textColorLink="@color/colorPrimaryText" />


        <EditText
            android:id="@+id/editT_Correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et_correo"
            android:inputType="text"
            android:textColorLink="@color/colorPrimaryText" />

        <EditText
            android:id="@+id/editT_Contrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et_claveRegistro"
            android:inputType="text"
            android:textColorLink="@color/colorPrimaryText" />

        <EditText
            android:id="@+id/editT_Telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et_telefono"
            android:inputType="phone"
            android:textColor="#af6542"
            android:textColorLink="@color/colorPrimaryText" />


        <EditText
            android:id="@+id/editT_direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et_direccion"
            android:inputType="text"
            android:textColorLink="@color/colorPrimaryText" />
    </LinearLayout>


    <Button
        android:id="@+id/Btn_Registrar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="54dp"
        android:background="@color/colorPrimary"
        android:text="@string/btn_text_registrar"
        android:textSize="20sp"
        android:theme="@style/BtnRaised" />


</RelativeLayout>
